<body class="animsition">


    <!-- Title Page -->
    <section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-color: silver;">
        <h2 class="l-text2 t-center">
            Q&A
        </h2>
    </section>

    <!-- content page -->
    <section class="bgwhite p-t-66 p-b-38">
        <div class="container">

                    <form class="form" action="/service/QA" method="POST">
                        <table>
                           <tr>
                                <td class="s-text12 t-center" style="background-color: #cdcdcd">No</td>
                                <td class="s-text12 t-center" style="background-color: #cdcdcd">Title</td>
                                <td class="s-text12 t-center" style="background-color: #cdcdcd">Writer</td>
                                <td class="s-text12 t-center" style="background-color: #cdcdcd">Date</td>
                                <td class="s-text12 t-center" style="background-color: #cdcdcd">View</td>
                                <td class="s-text12 t-center" style="background-color: #cdcdcd">Answer</td>
                            </tr>
                            <%if(contents.length>0){%>
                            <%let i = (count-skip);%>
                            <%contents.forEach(function(item){%>
                            <tr>
                                <td class="number t-center"><%=i%></td>
                                <td class="title t-center"><a style="text-decoration: none" href="/service/view?id=<%=item._id%>"><span class="sizebig" style="font-size: 16px; font-weight: bold"><%=item.title%></span></a></td>
                                <td class="writer t-center"><%=item.writer%></td>
                                <td class="date t-center"><%=item.date.getFullYear()%>-<%=item.date.getMonth()+1%>-<%=item.date.getDate()%></td>
                                <td class="cnt t-center"><%=item.count%></td>
                                <td class="status t-center">
                                    <% if(item.status){ %>
                                        O
                                    <% } else {%>
                                        X
                                    <% } %>
                                </td>
                                <%i--;%>
                            </tr>
                            <%});%>
                            <%} else {%>
                            <tr>
                                <td colspan="5">No Question.</td>
                            </tr>
                            <%}%>
                        </table>
                        <br><br>

                        <div class="pagination">
                            <% for(let i=1; i<=pagination; i++){ %>  
                            <a style="text-decoration: none;" href="/service/QA?page=<%=i%>" class="next-page"><span class="s-text12 t-center" style="font-size: 20px;">&nbsp;<%=i%></span></a>
                            <%}%> <br>
                        </div> <br>

                        <div class="w-size2 p-t-20" style="margin: auto;">
                            <input class="flex-c-m size2 bg4 bo-rad-23 hov1 m-text3 trans-0-4" type="button" onclick="location.href='/service/QA/write'" value="Write" >
                        </div>
                    </form>
