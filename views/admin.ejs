<html>
    <head>
        <meta charset="utf-8">
        <title>admin page</title>
    </head>
    <body>
        <p>Welcome to Admin Page!!!</p>
        <p><a href="/admin/logout">logout</a></p>
        <fieldset>
            <legend>전체사용자 메일 송신</legend>
            <form action="/admin/email" method="POST">
                <p><H3>message</H3></p>
                <p><input type="text" name="eventSubject" placeholder="subject"></p>
                <textarea name="eventMessage" cols="100" rows="10"></textarea>
                <p><input type="submit" name="submit" value="all"></p>
            </form>
        </fieldset>
        <fieldset>
            <legend>사용자 정보 관리</legend>
            <form action="/admin/user/delete" method="POST">
                <% for(i in users_info){ %>
                    <p>name : <%= users_info[i].name %></p>
                    <p>id : <%= users_info[i].id %></p>
                    <p>P.H : <%= users_info[i].phone_number %></p>
                    <p>email : <%= users_info[i].email %></p>
                    <p>address : <%= users_info[i].address %></p>
                    <input type="submit" name="delete" value="<%= users_info[i].id %>">
                    <hr>
                <% } %>
            </form>
        </fieldset>
        <fieldset>
            <legend>서버 점검</legend>
            <form action="/admin/server/check" method="POST">
                <input type="submit" value="server">
            </form>
        </fieldset>
        <fieldset>
            <legend>제고수량</legend>
            <div>
                <fieldset>
                    <legend>short-shirt</legend>
                    <p>T_shirt : <%= stock.Shirt.short_sleeved.T_shirt %></p>
                    <p>Y_shirt : <%= stock.Shirt.short_sleeved.Y_shirt %></p>
                    <p>denim_shirt : <%= stock.Shirt.short_sleeved.denim_shirt %></p>
                </fieldset>
                <fieldset>
                    <legend>long-shirt</legend>
                    <p>T_shirt : <%= stock.Shirt.long_sleeved.T_shirt %></p>
                    <p>T_shirt : <%= stock.Shirt.long_sleeved.T_shirt %></p>
                    <p>T_shirt : <%= stock.Shirt.long_sleeved.T_shirt %></p>
                </fieldset>
                <fieldset>
                    <legend>short-pants</legend>
                    <p>slacks : <%= stock.Pants.short.slacks %></p>
                    <p>blue_jeans : <%= stock.Pants.short.blue_jeans %></p>
                    <p>cotton_trousers : <%= stock.Pants.short.cotton_trousers %></p>
                </fieldset>
                <fieldset>
                    <legend>long-pants</legend>
                    <p>slacks : <%= stock.Pants.long.slacks %></p>
                    <p>blue_jeans : <%= stock.Pants.long.blue_jeans %></p>
                    <p>cotton_trousers : <%= stock.Pants.long.cotton_trousers %></p>
                </fieldset>
                <fieldset>
                    <legend>Bag</legend>
                    <p>echo : <%= stock.Bag.echo %></p>
                    <p>school : <%= stock.Bag.school %></p>
                    <p>cross : <%= stock.Bag.cross %></p>
                </fieldset>
                <fieldset>
                    <legend>Shoes</legend>
                    <p>sneakers : <%= stock.Shoes.sneakers %></p>
                    <p>sandals : <%= stock.Shoes.sandals %></p>
                    <p>canvas : <%= stock.Shoes.canvas %></p>
                </fieldset>
            </div>
        </fieldset>
        <fieldset>
            <legend>Q&A 답변</legend>
            <% for(i in q_a){ %>
                <% if (!q_a[i].status) { %>
                <fieldset>
                    <form action="/admin/answer" method="post">
                        <p>writer : <input type="text" name="writer" value="<%= q_a[i].writer %>"></p>
                        <p>title : <input type="text" name="title" value="<%= q_a[i].title %>"></p>
                        <p>text : <input type="text" name="text" value="<%= q_a[i].text %>"></p>
                        <textarea name="answer" cols="30" rows="10"></textarea>
                        <input type="submit" name="submit" value="답변하기">
                    </form>
                </fieldset>
                <% } %>
                <br>
            <% } %>
        </fieldset>
    </body>
</html>